<Page
    x:Class="FluentEditor.ControlPalette.ControlPaletteView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:color="using:FluentEditorShared.ColorPalette"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:FluentEditor.ControlPalette"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:shared="using:FluentEditorShared.Shadow"
    mc:Ignorable="d">

    <Page.Resources>
        <x:Double x:Key="TextControlThemeMinWidth">54</x:Double>
    </Page.Resources>
    
    <Grid XYFocusKeyboardNavigation="Enabled">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="304" />
        </Grid.ColumnDefinitions>
        <Border
            x:Name="ShadowCatcher"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="{ThemeResource AppBackgroundBrush}"/>
        <Grid
            x:Name="MainContentArea"
            Grid.Column="0"
            Margin="12,12,0,12"
            Background="{ThemeResource AppContentBackgroundBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <shared:Shadow
                Grid.Column="0"
                Grid.ColumnSpan="2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Elevation="8" />

            <Border
                Grid.Column="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="{x:Bind Path=ViewModel.LightRegionBrush, Mode=OneWay}"
                CornerRadius="2 0 0 2" />
            <Border
                Grid.Column="1"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="{x:Bind Path=ViewModel.DarkRegionBrush, Mode=OneWay}"
                CornerRadius="0 2 2 0" />

            <ScrollViewer
                Grid.Column="0"
                Grid.ColumnSpan="2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                HorizontalScrollBarVisibility="Disabled"
                HorizontalScrollMode="Disabled"
                VerticalScrollBarVisibility="Auto"
                VerticalScrollMode="Auto">
                <Grid
                    x:Name="TestContentContainer"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Border
                        Grid.Column="0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Top"
                        RequestedTheme="Light">
                        <local:ControlPaletteTestContent
                            x:Name="LightTestContent"
                            x:Uid="ControlPaletteLightTestContent"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Top">
                            <local:ControlPaletteTestContent.Resources>
                                <local:ControlPaletteResources
                                    DarkColorMapping="{x:Bind Path=ViewModel.DarkColorMapping, Mode=OneWay}"
                                    LightColorMapping="{x:Bind Path=ViewModel.LightColorMapping, Mode=OneWay}"
                                    LinkedElement="{x:Bind Path=LightTestContent, Mode=OneTime}" />
                            </local:ControlPaletteTestContent.Resources>
                        </local:ControlPaletteTestContent>
                    </Border>

                    <Border
                        Grid.Column="1"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Top"
                        RequestedTheme="Dark">
                        <local:ControlPaletteTestContent
                            x:Name="DarkTestContent"
                            x:Uid="ControlPaletteDarkTestContent"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Top">
                            <local:ControlPaletteTestContent.Resources>
                                <local:ControlPaletteResources
                                    DarkColorMapping="{x:Bind Path=ViewModel.DarkColorMapping, Mode=OneWay}"
                                    LightColorMapping="{x:Bind Path=ViewModel.LightColorMapping, Mode=OneWay}"
                                    LinkedElement="{x:Bind Path=DarkTestContent, Mode=OneTime}" />
                            </local:ControlPaletteTestContent.Resources>
                        </local:ControlPaletteTestContent>
                    </Border>
                </Grid>
            </ScrollViewer>

        </Grid>
        <Grid
            x:Name="PropertyInspectorArea"
            Grid.Column="1"
            Margin="12"
            CornerRadius="2"
            Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid
                Grid.Row="0"
                Height="40"
                HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid x:Name="ColorTabGrid" Grid.Column="0" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
                    <HyperlinkButton
                        Click="ColorHyperlinkButton_Click"
                        x:Name="ColorHyperlinkButton"
                        x:Uid="ControlPaletteInspectorHeader"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontWeight="SemiBold">
                        <HyperlinkButton.ContentTemplate>
                            <DataTemplate>
                                <FontIcon Glyph="&#xE790;" FontSize="25"/>
                            </DataTemplate>
                        </HyperlinkButton.ContentTemplate>
                    </HyperlinkButton>
                </Grid>

                <Grid x:Name="ShapeTabGrid" Grid.Column="1" Background="{ThemeResource AppBackgroundBrush}">
                    <HyperlinkButton
                        Click="ShapeHyperlinkButton_Click"
                        x:Name="ShapeHyperlinkButton"
                        Content="Shape"
                        Foreground="{ThemeResource ButtonForegroundThemeBrush}"
                        Opacity="0.6"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontWeight="SemiBold"
                        FontSize="20">
                        <HyperlinkButton.ContentTemplate>
                            <DataTemplate>
                                <FontIcon Glyph="&#xF158;" FontSize="25"/>
                            </DataTemplate>
                        </HyperlinkButton.ContentTemplate>
                    </HyperlinkButton>
                </Grid>

                <Grid x:Name="FontTabGrid" Grid.Column="2" Background="{ThemeResource AppBackgroundBrush}">
                    <HyperlinkButton
                        Click="FontHyperlinkButton_Click"
                        Content="Font"
                        x:Name="FontHyperlinkButton"
                        Foreground="{ThemeResource ButtonForegroundThemeBrush}"
                        Opacity="0.6"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontWeight="SemiBold"
                        FontSize="20">
                        <HyperlinkButton.ContentTemplate>
                            <DataTemplate>
                                <FontIcon Glyph="&#xE8E9;" FontSize="25"/>
                            </DataTemplate>
                        </HyperlinkButton.ContentTemplate>
                    </HyperlinkButton>
                </Grid>
            </Grid>
            <ScrollViewer
                Grid.Row="1"
                Margin="10,0,0,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                HorizontalScrollBarVisibility="Disabled"
                HorizontalScrollMode="Disabled"
                VerticalScrollBarVisibility="Auto"
                VerticalScrollMode="Auto">
                <Grid>
                    <StackPanel
                        x:Name="FontPanel"
                        Visibility="Collapsed"
                        Margin="2,0,12,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Top"
                        Orientation="Vertical">

                        <TextBlock
                            VerticalAlignment="Top"
                            HorizontalAlignment="Stretch"
                            Text="Font Here"/>

                    </StackPanel>
                    <StackPanel
                        x:Name="ShapePanel"
                        Visibility="Collapsed"
                        Margin="2,0,12,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Top"
                        Orientation="Vertical">

                        <ComboBox 
                            Header="Presets"
                            BorderThickness="1"
                            Margin="0, 10, 0, 0"
                            CornerRadius="2"
                            SelectedIndex="1"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Top">
                            <ComboBoxItem>No Rounding, Thicker Borders</ComboBoxItem>
                            <ComboBoxItem>Default</ComboBoxItem>
                        </ComboBox>
                        
                        <TextBlock
                            Margin="0, 25, 0, 0"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Stretch"
                            Text="Control Corner Radius"
                            FontWeight="SemiBold"
                            LineHeight="20"/>
                        <Slider x:Name="ControlRoundSlider" ValueChanged="ControlRoundSlider_ValueChanged" Maximum="20" Minimum="0" Value="2" HorizontalAlignment="Stretch"/>
                        <StackPanel Orientation="Horizontal" Spacing="13">
                            <StackPanel>
                                <FontIcon Glyph="&#xF5A1;" FontSize="28"/>
                                <TextBox CornerRadius="2" BorderThickness="1"
                                         x:Name="TopLeftTB"
                                         Text="{Binding Value, ElementName=ControlRoundSlider, Mode=OneWay}" 
                                         MaxLength="2" 
                                         Width="54" 
                                         GotFocus="TextBox_GotFocus"
                                         LostFocus="TextBox_LostFocus"
                                         KeyDown="TextBox_KeyDown"/>
                            </StackPanel>
                            <StackPanel>
                                <FontIcon Glyph="&#xF5A2;" FontSize="28"/>
                                <TextBox CornerRadius="2" BorderThickness="1"
                                         x:Name="TopRightTB"
                                         Text="{Binding Value, ElementName=ControlRoundSlider, Mode=OneWay}" 
                                         MaxLength="2" 
                                         Width="54" 
                                         GotFocus="TextBox_GotFocus"
                                         LostFocus="TextBox_LostFocus"
                                         KeyDown="TextBox_KeyDown"/>
                            </StackPanel>
                            <StackPanel>
                                <FontIcon Glyph="&#xF5A4;" FontSize="28"/>
                                <TextBox CornerRadius="2" BorderThickness="1"
                                         x:Name="BottomRightTB"
                                         Text="{Binding Value, ElementName=ControlRoundSlider, Mode=OneWay}" 
                                         MaxLength="2" 
                                         Width="54" 
                                         GotFocus="TextBox_GotFocus"
                                         LostFocus="TextBox_LostFocus"
                                         KeyDown="TextBox_KeyDown"/>
                            </StackPanel>
                            <StackPanel>
                                <FontIcon Glyph="&#xF5A3;" FontSize="28"/>
                                <TextBox CornerRadius="2" BorderThickness="1"
                                         x:Name="BottomLeftTB"
                                         Text="{Binding Value, ElementName=ControlRoundSlider, Mode=OneWay}" 
                                         MaxLength="2" 
                                         Width="54" 
                                         GotFocus="TextBox_GotFocus"
                                         LostFocus="TextBox_LostFocus"
                                         KeyDown="TextBox_KeyDown"/>
                            </StackPanel>
                        </StackPanel>

                        <TextBlock
                            Margin="0, 25, 0, 0"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Stretch"
                            Text="Overlay Corner Radius"
                            FontWeight="SemiBold"
                            LineHeight="20"/>
                        <Slider x:Name="ControlRoundSliderOverlay" 
                                ValueChanged="ControlRoundSliderOverlay_ValueChanged" 
                                Maximum="20" Minimum="0" Value="4" HorizontalAlignment="Stretch"/>
                        <StackPanel Orientation="Horizontal" Spacing="13">
                            <StackPanel>
                                <FontIcon Glyph="&#xF599;" FontSize="28" Margin="0, 0, 0, 3"/>
                                <TextBox CornerRadius="2" BorderThickness="1"
                                         x:Name="TopLeftTBOverlay"
                                         Text="{Binding Value, ElementName=ControlRoundSliderOverlay, Mode=OneWay}" 
                                         MaxLength="2" 
                                         Width="54"
                                         GotFocus="TextBox_GotFocus"
                                         LostFocus="TextBoxOverlay_LostFocus"
                                         KeyDown="TextBoxOverlay_KeyDown"/>
                            </StackPanel>
                            <StackPanel>
                                <FontIcon Glyph="&#xF59A;" FontSize="28" Margin="0, 0, 0, 3"/>
                                <TextBox CornerRadius="2" BorderThickness="1"
                                         x:Name="TopRightTBOverlay"
                                         Text="{Binding Value, ElementName=ControlRoundSliderOverlay, Mode=OneWay}" 
                                         MaxLength="2" 
                                         Width="54"
                                         GotFocus="TextBox_GotFocus"
                                         LostFocus="TextBoxOverlay_LostFocus"/>
                            </StackPanel>
                            <StackPanel>
                                <FontIcon Glyph="&#xF59B;" FontSize="28" Margin="0, 0, 0, 3"/>
                                <TextBox CornerRadius="2" BorderThickness="1"
                                         x:Name="BottomRightTBOverlay"
                                         Text="{Binding Value, ElementName=ControlRoundSliderOverlay, Mode=OneWay}" 
                                         MaxLength="2" 
                                         Width="54"
                                         GotFocus="TextBox_GotFocus"
                                         LostFocus="TextBoxOverlay_LostFocus"/>
                            </StackPanel>
                            <StackPanel>
                                <FontIcon Glyph="&#xF5AE;" FontSize="28" Margin="0, 0, 0, 3"/>
                                <TextBox CornerRadius="2" BorderThickness="1"
                                         x:Name="BottomLeftTBOverlay"
                                         Text="{Binding Value, ElementName=ControlRoundSliderOverlay, Mode=OneWay}" 
                                         MaxLength="2" 
                                         Width="54"
                                         GotFocus="TextBox_GotFocus"
                                         LostFocus="TextBoxOverlay_LostFocus"/>
                            </StackPanel>
                        </StackPanel>

                        <TextBlock
                            Margin="0, 25, 0, 0"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Stretch"
                            Text="Control Border Thickness"
                            FontWeight="SemiBold"
                            LineHeight="20"/>
                        <Slider x:Name="ControlBorderThicknessSlider" 
                                ValueChanged="ControlBorderThicknessSlider_ValueChanged" 
                                Maximum="5" Minimum="0" Value="1" HorizontalAlignment="Stretch"/>
                        <StackPanel Orientation="Horizontal" Spacing="13">
                            <StackPanel>
                                <FontIcon Glyph="&#xF5A5;" FontSize="28"/>
                                <TextBox CornerRadius="2" BorderThickness="1"
                                         x:Name="LeftBorderTB"
                                         Text="{Binding Value, ElementName=ControlBorderThicknessSlider, Mode=OneWay}" 
                                         MaxLength="2" 
                                         Width="54" 
                                         GotFocus="TextBox_GotFocus"
                                         LostFocus="TextBoxBorder_LostFocus"/>
                            </StackPanel>
                            <StackPanel>
                                <FontIcon Glyph="&#xF5A7;" FontSize="28"/>
                                <TextBox CornerRadius="2" BorderThickness="1"
                                         x:Name="TopBorderTB"
                                         Text="{Binding Value, ElementName=ControlBorderThicknessSlider, Mode=OneWay}" 
                                         MaxLength="2" 
                                         Width="54"
                                         GotFocus="TextBox_GotFocus"
                                         LostFocus="TextBoxBorder_LostFocus"/>
                            </StackPanel>
                            <StackPanel>
                                <FontIcon Glyph="&#xF5A6;" FontSize="28"/>
                                <TextBox CornerRadius="2" BorderThickness="1"
                                         x:Name="RightBorderTB"
                                         Text="{Binding Value, ElementName=ControlBorderThicknessSlider, Mode=OneWay}" 
                                         MaxLength="2" 
                                         Width="54" 
                                         GotFocus="TextBox_GotFocus"
                                         LostFocus="TextBoxBorder_LostFocus"/>
                            </StackPanel>
                            <StackPanel>
                                <FontIcon Glyph="&#xF5A8;" FontSize="28"/>
                                <TextBox CornerRadius="2" BorderThickness="1"
                                         x:Name="BottomBorderTB"
                                         Text="{Binding Value, ElementName=ControlBorderThicknessSlider, Mode=OneWay}" 
                                         MaxLength="2" 
                                         Width="54" 
                                         GotFocus="TextBox_GotFocus"
                                         LostFocus="TextBoxBorder_LostFocus"/>
                            </StackPanel>
                        </StackPanel>

                    </StackPanel>
                    <StackPanel
                        x:Name="ColorPanel"
                        Visibility="Visible"
                        Margin="2,0,12,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Top"
                        Orientation="Vertical">
                        <ComboBox CornerRadius="2"
                                  BorderThickness="1"
                            Margin="0, 10, 0, 0"
                            x:Uid="ControlPalettePresetCombo"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Top"
                            DisplayMemberPath="Name"
                            ItemsSource="{x:Bind Path=ViewModel.Presets, Mode=OneWay}"
                            SelectedValue="{x:Bind Path=ViewModel.ActivePreset, Mode=TwoWay}" />
                        <Grid Margin="0,28,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                        
                            <Button
                                x:Uid="ControlPaletteLoadButton"
                                Grid.Column="0"
                                Margin="0,0,6,0"
                                HorizontalAlignment="Stretch"
                                Click="{x:Bind Path=ViewModel.OnLoadDataRequested, Mode=OneWay}" />

                            <Button
                                x:Uid="ControlPaletteSaveButton"
                                Grid.Column="1"
                                Margin="6,0,0,0"
                                HorizontalAlignment="Stretch"
                                Click="{x:Bind Path=ViewModel.OnSaveDataRequested, Mode=OneWay}" />
                        </Grid>
                        <TextBlock
                            x:Uid="ControlPaletteRegionBlock"
                            Margin="0,32,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            FontWeight="SemiBold"
                            LineHeight="20"
                            Style="{StaticResource BodyTextBlockStyle}" />
                        <Grid Margin="0,8,0,32">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                x:Uid="ControlPaletteLightThemeBlock"
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="0,0,8,12"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                LineHeight="16"
                                Style="{StaticResource CaptionTextBlockStyle}" />
                            <TextBlock
                                x:Uid="ControlPaletteDarkThemeBlock"
                                Grid.Row="0"
                                Grid.Column="1"
                                Margin="8,0,0,12"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                LineHeight="16"
                                Style="{StaticResource CaptionTextBlockStyle}" />
                            <Border Grid.Row="1"
                                Grid.Column="0"
                                Margin="0,0,6,0" HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                BorderThickness="1"
                                BorderBrush="{ThemeResource ButtonBackgroundThemeBrush}"
                                CornerRadius="2">
                                <color:ColorPaletteEntryEditor
                                AutomationProperties.Name="{x:Bind Path=ViewModel.LightRegion.Title, Mode=OneWay}"
                                ColorPaletteEntry="{x:Bind Path=ViewModel.LightRegion, Mode=OneWay}"
                                Style="{StaticResource LargeColorPaletteEntryEditorStyle}" />
                            </Border>

                            <Border
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="6,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                BorderThickness="1"
                                BorderBrush="{ThemeResource ButtonBackgroundThemeBrush}"
                                CornerRadius="2">
                            <color:ColorPaletteEntryEditor                            
                                AutomationProperties.Name="{x:Bind Path=ViewModel.DarkRegion.Title, Mode=OneWay}"
                                ColorPaletteEntry="{x:Bind Path=ViewModel.DarkRegion, Mode=OneWay}"
                                Style="{StaticResource LargeColorPaletteEntryEditorStyle}" />
                            </Border>
                        </Grid>
                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Top">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                x:Uid="ControlPaletteBaseBlock"
                                Grid.Column="0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                FontWeight="SemiBold"
                                LineHeight="20"
                                Style="{StaticResource BodyTextBlockStyle}" />
                            <ToggleButton
                                x:Name="BaseExpanderButton"
                                Grid.Column="1"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Style="{StaticResource ExpanderButtonStyle}">
                                <FontIcon FontSize="14" Glyph="&#xE70D;" />
                            </ToggleButton>
                        </Grid>
                        <Grid Margin="0,8,0,32">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                x:Uid="ControlPaletteLightThemeBlock"
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="0,0,8,12"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                LineHeight="16"
                                Style="{StaticResource CaptionTextBlockStyle}" />
                            <TextBlock
                                x:Uid="ControlPaletteDarkThemeBlock"
                                Grid.Row="0"
                                Grid.Column="1"
                                Margin="8,0,0,12"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                LineHeight="16"
                                Style="{StaticResource CaptionTextBlockStyle}" />
                            <Border
                                Grid.Row="1"
                                Grid.Column="0"
                                Margin="0,0,6,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                BorderThickness="1"
                                BorderBrush="{ThemeResource ButtonBackgroundThemeBrush}"
                                CornerRadius="2">
                            <color:ColorPaletteEditor                            
                                ColorPalette="{x:Bind Path=ViewModel.LightBase, Mode=OneWay}"
                                IsExpanded="{x:Bind Path=BaseExpanderButton.IsChecked.Value, Mode=OneWay}" />
                            </Border>
                            <Border
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="6,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                BorderThickness="1"
                                BorderBrush="{ThemeResource ButtonBackgroundThemeBrush}"
                                CornerRadius="2">
                            <color:ColorPaletteEditor                            
                                ColorPalette="{x:Bind Path=ViewModel.DarkBase, Mode=OneWay}"
                                IsExpanded="{x:Bind Path=BaseExpanderButton.IsChecked.Value, Mode=OneWay}" />
                            </Border>
                        </Grid>
                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Top">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                x:Uid="ControlPalettePrimaryBlock"
                                Grid.Column="0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                FontWeight="SemiBold"
                                LineHeight="20"
                                Style="{StaticResource BodyTextBlockStyle}" />
                            <ToggleButton
                                x:Name="PrimaryExpanderButton"
                                Grid.Column="1"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Style="{StaticResource ExpanderButtonStyle}">
                                <FontIcon FontSize="14" Glyph="&#xE70D;" />
                            </ToggleButton>
                        </Grid>
                        <Grid Margin="0,8,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                x:Uid="ControlPaletteLightThemeBlock"
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="0,0,8,12"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                LineHeight="16"
                                Style="{StaticResource CaptionTextBlockStyle}" />
                            <TextBlock
                                x:Uid="ControlPaletteDarkThemeBlock"
                                Grid.Row="0"
                                Grid.Column="1"
                                Margin="8,0,0,12"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                LineHeight="16"
                                Style="{StaticResource CaptionTextBlockStyle}" />
                            <Border
                                Grid.Row="1"
                                Grid.Column="0"
                                Margin="0,0,6,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                BorderThickness="1"
                                BorderBrush="{ThemeResource ButtonBackgroundThemeBrush}"
                                CornerRadius="2">
                            <color:ColorPaletteEditor
                                ColorPalette="{x:Bind Path=ViewModel.LightPrimary, Mode=OneWay}"
                                IsExpanded="{x:Bind Path=PrimaryExpanderButton.IsChecked.Value, Mode=OneWay}" />
                            </Border>
                            <Border
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="6,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                BorderThickness="1"
                                BorderBrush="{ThemeResource ButtonBackgroundThemeBrush}"
                                CornerRadius="2">
                            <color:ColorPaletteEditor                            
                                ColorPalette="{x:Bind Path=ViewModel.DarkPrimary, Mode=OneWay}"
                                IsExpanded="{x:Bind Path=PrimaryExpanderButton.IsChecked.Value, Mode=OneWay}" />
                            </Border>
                        </Grid>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
            <Grid
                Grid.Row="2"
                Margin="12,12,12,12"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Bottom">
                <Button
                    x:Uid="ControlPaletteExportButton"
                    Grid.Column="0"
                    CornerRadius="2"
                    Margin="0,0,6,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Bottom"
                    Click="{x:Bind Path=ViewModel.OnExportRequested, Mode=OneWay}"
                    Style="{StaticResource AccentButtonStyle}" />
            </Grid>
        </Grid>
    </Grid>
</Page>
